pipeline {
    agent {
        docker { image 'megabuild' }
    }
    stages {
        stage('Cleanup') {
            steps {
                sh 'make USE_LOCAL_CC65=0 cleanall'
            }
        }
        stage('Build linux') {
            steps {
                sh 'make USE_LOCAL_CC65=0 allunix'
            }
        }
        stage('Build windows') {
            steps {
                sh 'make USE_LOCAL_CC65=0 allwin'
            }
        }
        stage('Test build') {
            steps {
                sh 'make USE_LOCAL_CC65=0 test'
            }
        }
        stage('Publish') {
            steps {
                sh 'gh release list'
            }
        }
    }
    environment {
        GH_TOKEN = credentials('mega65-github-api')
    }
}
